{
  "name": "writeup-frontend",
  "version": "0.1.0",
  "author": "xDarkyne",
  "repository": "https://github.com/nicyne/writeup",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^8.0.0",
    "react-syntax-highlighter": "^15.4.5",
    "react-timer-hook": "^3.0.5",
    "remark-emoji": "^3.0.2",
    "remark-gfm": "^3.0.1",
    "swr": "^1.2.2"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/node": "17.0.21",
    "@types/react": "17.0.39",
    "@types/react-syntax-highlighter": "^13.5.2",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "prettier": "^2.5.1",
    "sass": "^1.49.11",
    "typescript": "4.6.2"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "rules": {
      "semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "block-spacing": [
        "error",
        "always"
      ],
      "comma-spacing": [
        "error",
        {
          "before": false,
          "after": true
        }
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "eol-last": [
        "error",
        "always"
      ]
    }
  }
}
